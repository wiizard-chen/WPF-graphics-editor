<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WpfApplication1"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="540"
        Height="400"
        mc:Ignorable="d">
    <Grid>
        <Canvas x:Name="workspace"
                Grid.Row="0"
                Visibility="Visible">
            <Canvas.Background>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.AppWorkspaceColorKey}}" />
            </Canvas.Background>
            <Border x:Name="border"
                    Canvas.Left="10"
                    Canvas.Top="10"
                    Width="500"
                    Height="300"
                    Margin="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Padding="0">
                <Border.Effect>
                    <DropShadowEffect Opacity="0.7" ShadowDepth="4" />
                </Border.Effect>
                <Canvas x:Name="canvas"
                        Margin="0"
                        Background="White"
                        ClipToBounds="True">
                    <!--<Grid Canvas.Left="20"
                          Canvas.Top="20"
                          Width="100"
                          Height="100">
                        <TextBlock Text="hellohellohellohellohellohellohellohellohellohellohellohellohellohellohello" TextWrapping="Wrap" />
                    -->
                    <!--<Line Stroke="Black" X1="0" X2="0" Y1="0" Y2="50"  Width="50" Stretch="Fill"></Line>-->
                    <!--
                    </Grid>-->
                </Canvas>
            </Border>

        </Canvas>


    </Grid>
</Window>
